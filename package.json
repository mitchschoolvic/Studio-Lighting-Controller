{
  "name": "dmx-controller-app",
  "version": "1.0.6",
  "description": "Professional DMX Lighting Control Application",
  "main": "dist/main/index.js",
  "author": "Lighting Controller",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.json && electron .",
    "dev:renderer": "vite",
    "build": "tsc -p tsconfig.json && vite build",
    "package": "npm run build && electron-builder",
    "postinstall": "electron-rebuild -f -w serialport",
    "rebuild": "electron-rebuild -f -w serialport"
  },
  "dependencies": {
    "electron-log": "^5.3.0",
    "electron-store": "^10.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "serialport": "^12.0.0",
    "socket.io": "^4.8.0",
    "socket.io-client": "^4.8.0",
    "uuid": "^11.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  }
}
